{
    "manifest_version": 3,
    "name": "Youtube Preview Popup",
    "description": "Watch and control YouTube videos in a sleek preview popup for a more immersive and cool viewing experience.",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "player.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}